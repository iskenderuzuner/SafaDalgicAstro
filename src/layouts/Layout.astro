import { getEntry, getCollection } from 'astro:content'; 

// Props: Sayfadan gelen özel başlık ve açıklama
const { 
    title, 
    description,
    image, // Blog yazısı resmi varsa
    articleDate, // Blog tarihi varsa
    type = "website" // website veya article
} = Astro.props;

// Ayarları Çek
const genelAyarlar = await getEntry('ayarlar', 'genel');
const veri = genelAyarlar ? genelAyarlar.data : {
    // Veri yoksa varsayılanlar (Hata vermemesi için)
    telefon: "0532 540 68 29",
    email: "info@safadalgicpompa.com",
    adres: "Adres Belirtilmedi",
    slogan: "Safa Dalgıç Pompa",
    logo: "/images/genel/logo.png", // Varsayılan logo yolu
    favicon: "/favicon.svg",
    seoDescription: "Sondaj ve Dalgıç Pompa Hizmetleri"
};

// Hizmetleri Çek (Menü için)
const tumHizmetler = await getCollection('hizmetler');
tumHizmetler.sort((a, b) => a.data.order - b.data.order);

// --- SEO MANTIĞI ---
// 1. Başlık: "Hizmetler | Safa Pompa" formatı
const sayfaBasligi = title ? `${title} | ${veri.siteBaslik || 'Safa Dalgıç Pompa'}` : (veri.siteBaslik || 'Safa Dalgıç Pompa');

// 2. Açıklama: Sayfaya özel yoksa genel ayarı kullan
const sayfaAciklamasi = description || veri.seoDescription;

// 3. Otomatik URL ve Canonical
const siteUrl = Astro.site ? Astro.site.href : "https://iskenderuzuner.web.tr";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// 1. RESİM LİNKİ DÜZELTMESİ (Relative URL Sorunu Çözüldü)
// Eğer resim "/images" ile başlıyorsa, başına site adresini (https://...) ekler.
const hamResim = image || veri.logo;
const shareImage = hamResim.startsWith('http') 
    ? hamResim 
    : new URL(hamResim, siteUrl).href;

// 2. SCHEMA.ORG (Google İşletme Kimliği - GÜNCELLENDİ)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  "name": veri.siteBaslik || "Safa Dalgıç Pompa",
  "image": shareImage,
  "description": veri.seoDescription,
  "telephone": veri.telefon,
  "email": veri.email,
  "url": siteUrl,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": veri.adres,
    "addressLocality": "İstanbul",
    "addressCountry": "TR",
    "postalCode": "34912" // Pendik Yenişehir Posta Kodu
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "40.9281093",  // TAM NOKTA ATIŞI KONUMUN
    "longitude": "29.3093346" // TAM NOKTA ATIŞI KONUMUN
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": [
      "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
    ],
    "opens": "00:00",
    "closes": "23:59"
  },
  "priceRange": "₺₺"
};
