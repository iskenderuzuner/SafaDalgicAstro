<script>
  const form = document.getElementById('anasayfa-formu');
  const messageDiv = document.getElementById('form-message');
  const submitBtn = document.getElementById('submit-btn');

  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault(); // 1. Sayfanın başka yere gitmesini engelle!

      // Butonu "Gönderiliyor..." moduna al
      const originalText = submitBtn.innerText;
      submitBtn.innerText = 'GÖNDERİLİYOR...';
      submitBtn.disabled = true;
      submitBtn.style.opacity = '0.7';

      // Form verilerini topla
      const formData = new FormData(form);

      // 2. Arka planda (Fetch ile) gönder
      fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
            'Accept': 'application/json' // Bu satır Formsubmit'e "Beni yönlendirme, sadece bilgi ver" der.
        }
      })
      .then(response => {
        if (response.ok) {
          // BAŞARILI OLURSA
          messageDiv.style.display = 'block';
          messageDiv.style.backgroundColor = '#d4edda';
          messageDiv.style.color = '#155724';
          messageDiv.innerText = '✅ Mesajınız başarıyla gönderildi! Teşekkürler.';
          form.reset(); // Formu temizle
        } else {
          // HATA OLURSA
          throw new Error('Form gönderilemedi');
        }
      })
      .catch(error => {
        // HATA MESAJI GÖSTER
        messageDiv.style.display = 'block';
        messageDiv.style.backgroundColor = '#f8d7da';
        messageDiv.style.color = '#721c24';
        messageDiv.innerText = '❌ Bir hata oluştu. Lütfen daha sonra tekrar deneyin.';
      })
      .finally(() => {
        // Her durumda butonu eski haline getir
        submitBtn.innerText = originalText;
        submitBtn.disabled = false;
        submitBtn.style.opacity = '1';
        
        // 5 saniye sonra başarı mesajını gizle (isteğe bağlı)
        setTimeout(() => {
            messageDiv.style.display = 'none';
        }, 5000);
      });
    });
  }
</script>
