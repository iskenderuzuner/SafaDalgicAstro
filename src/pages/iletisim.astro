---
export const prerender = true; 
import Layout from '../layouts/Layout.astro';
---

<Layout 
    title="İletişim" 
    description="Sondaj ve pompa işleriniz için 7/24 bize ulaşın. Telefon, adres ve konum bilgileri."
    type="website"
>

    <section class="page-banner" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1590247813693-5541d1c609fd?q=80&w=1920&auto=format&fit=crop');">
        <div class="banner-content">
            <h1>İletişim</h1>
            <p>Sorularınız ve Teklif Talepleriniz İçin Bize Ulaşın</p>
        </div>
    </section>

    <section class="contact-form-section" style="margin-bottom: 50px;">
        <div class="container">
            <div class="form-wrapper">
                <div class="form-info">
                    <span class="sub-title">MERKEZ OFİS</span>
                    <h3>Bize Ulaşın</h3>
                    <p>7 gün 24 saat acil servis hattımız ve uzman kadromuzla hizmetinizdeyiz.</p>
                    
                    <div class="contact-details">
                        <div class="contact-item-box">
                            <div class="icon-circle"><i class="fas fa-phone"></i></div>
                            <div class="contact-text">
                                <span>Telefon</span>
                                <strong>0532 540 68 29</strong>
                            </div>
                        </div>
                        <div class="contact-item-box">
                            <div class="icon-circle"><i class="fas fa-envelope"></i></div>
                            <div class="contact-text">
                                <span>E-Posta</span>
                                <strong>info@safadalgicpompa.com</strong>
                            </div>
                        </div>
                        <div class="contact-item-box">
                            <div class="icon-circle"><i class="fas fa-map-marker-alt"></i></div>
                            <div class="contact-text">
                                <span>Adres</span>
                                <strong>Yenişehir Mh. Osmanlı Bulvarı<br>Ayport Residence Pendik / İst.</strong>
                            </div>
                        </div>
                    </div>
                </div>

                 <div class="form-box">
                    <form id="anasayfa-formu"
                        action="https://formsubmit.co/iskenderuzuner@gmail.com" 
                        method="POST"
                        class="contact-form">
                        <div class="form-group">
                        <input type="text" name="_honey" style="display:none">
                        <input type="hidden" name="_captcha" value="false">
                        <input type="hidden" name="_template" value="table">
                        <input type="text" name="ad_soyad" required placeholder="Adınız Soyadınız">
                        </div>
                        <div class="form-group">
                            <input 
                                type="tel" 
                                name="telefon" 
                                id="phoneInput" 
                                placeholder="0555XXXXXXX" 
                                maxlength="11" 
                                pattern="05[0-9]{9}" 
                                title="Lütfen numaranızı başında 0 olacak şekilde 11 hane olarak giriniz (Örn: 05551234567)"
                                required
                                >
                        </div>
                        <div class="form-group">
                            <textarea placeholder="Mesajınız" name="mesaj" rows="4"></textarea>
                        </div>
                        <div id="form-message" style="display:none; margin-bottom:15px; padding:10px; border-radius:5px;"></div>
                        <button type="submit" class="btn-submit" id="submit-btn">GÖNDER</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3013.918974534832!2d29.3034567!3d40.9263456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cadaf650000001%3A0x1234567890abcdef!2sPendik%2C%20Istanbul!5e0!3m2!1str!2str!4v1234567890123!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

</Layout>