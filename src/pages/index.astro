---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// --- VERİ ÇEKME İŞLEMLERİ ---

// 1. Hizmetleri Çek ve Sırala
const tumHizmetler = await getCollection('hizmetler');
tumHizmetler.sort((a, b) => a.data.order - b.data.order);

// 2. Slider Verisini Çek ve Sırala
const sliderVerileri = await getCollection('slider');
sliderVerileri.sort((a, b) => a.data.sira - b.data.sira);

// Slider yoksa gösterilecek varsayılan görsel (Hata önleyici)
const defaultSliderImage = '/images/slider-bg-1.jpg'; // Buraya projedeki gerçek bir resim yolunu yazabilirsin
---

<Layout title="Ana Sayfa" description="Safa Dalgıç Pompa ve Sondaj Sistemleri">
    
    <section class="hero-slider-area">
        <div class="hero-slider-wrapper">
            
            {sliderVerileri.length === 0 && (
                <div class="single-slider-item active" style={`background-image: url('${defaultSliderImage}')`}>
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-8 col-md-10 col-12">
                                <div class="slider-content-area">
                                    <h1>Safa Dalgıç Pompa</h1>
                                    <p>Admin panelinden slider eklemek için /keystatic adresine gidin.</p>
                                    <div class="slider-btn">
                                        <a href="/iletisim" class="btn btn-primary">Bize Ulaşın</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            )}

            {sliderVerileri.map((slide, index) => (
                // İlk slayta 'active' sınıfı eklenir, resim arka plan olarak ayarlanır
                <div class={`single-slider-item js-dynamic-slide ${index === 0 ? 'active' : ''}`} style={`background-image: url('${slide.data.resim}')`}>
                    <div class="overlay"></div>
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-8 col-md-10 col-12">
                                <div class="slider-content-area">
                                    <h1>{slide.data.title}</h1>
                                    <p>{slide.data.aciklama}</p>
                                    <div class="slider-btn">
                                        <a href="/iletisim" class="btn btn-primary">Hemen Teklif Al <i class="fas fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}

            {sliderVerileri.length > 1 && (
                <div class="slider-arrows-area">
                    <button class="slider-arrow prev-arrow" id="js-prev-btn"><i class="fas fa-chevron-left"></i></button>
                    <button class="slider-arrow next-arrow" id="js-next-btn"><i class="fas fa-chevron-right"></i></button>
                </div>
            )}
        </div>
    </section>
    <section id="hizmetler" class="services-area section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8 col-12">
                    <div class="section-title text-center">
                        <h2>Hizmetlerimiz</h2>
                        <p>Sondaj, kuyu ve pompa sistemlerinde anahtar teslim, garantili ve profesyonel çözümler sunuyoruz.</p>
                    </div>
                </div>
            </div>
            
            <div class="row">
                {tumHizmetler.map((hizmet) => (
                    <div class="col-lg-4 col-md-6 col-12 mb-4">
                        <div class="single-service-item">
                            <div class="service-img">
                                <img src={hizmet.data.image} alt={hizmet.data.title} style="height: 250px; width: 100%; object-fit: cover;">
                            </div>
                            <div class="service-content">
                                <h3>{hizmet.data.title}</h3>
                                <p>{hizmet.data.description}</p>
                                <a href={`/hizmetler/${hizmet.slug}`} class="read-more-btn">
                                    İncele <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
    </Layout>

<script>
    // Bu script slider oklarının çalışmasını sağlar
    document.addEventListener('astro:page-load', () => {
        const slides = document.querySelectorAll('.js-dynamic-slide');
        const prevBtn = document.getElementById('js-prev-btn');
        const nextBtn = document.getElementById('js-next-btn');
        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                if (i === index) {
                    slide.classList.add('active');
                    // CSS'in devreye girmesi için küçük bir tetikleme (Gerekirse)
                    (slide as HTMLElement).style.opacity = '1'; 
                    (slide as HTMLElement).style.visibility = 'visible';
                } else {
                    slide.classList.remove('active');
                     // CSS'in devreye girmesi için küçük bir tetikleme
                    (slide as HTMLElement).style.opacity = '0';
                    (slide as HTMLElement).style.visibility = 'hidden';
                }
            });
        }

        if (prevBtn && nextBtn && slides.length > 0) {
            // İlk yüklemede sadece ilk slaytı göster
             showSlide(currentSlide);

            nextBtn.addEventListener('click', () => {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            });

            prevBtn.addEventListener('click', () => {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                showSlide(currentSlide);
            });
             // Otomatik geçiş (İsteğe bağlı - 5 saniyede bir)
            // setInterval(() => {
            //     currentSlide = (currentSlide + 1) % slides.length;
            //     showSlide(currentSlide);
            // }, 5000);
        }
    });
</script>

<style is:global>
    /* Temel Slider Stilleri (Eğer temanın CSS'i yüklenmezse devreye girer) */
    .hero-slider-area {
        position: relative;
        overflow: hidden;
    }
    .hero-slider-wrapper {
        position: relative;
        height: 600px; /* Yüksekliği ihtiyaca göre ayarla */
    }
    .single-slider-item {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.5s ease-in-out;
        display: flex;
        align-items: center;
    }
    .single-slider-item.active {
        opacity: 1;
        visibility: visible;
        z-index: 2;
    }
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Resim üzerine koyu katman */
        z-index: 1;
    }
    .slider-content-area {
        position: relative;
        z-index: 3;
        color: #fff;
    }
    .slider-content-area h1 {
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #fff;
    }
    .slider-content-area p {
        font-size: 18px;
        margin-bottom: 30px;
        color: #f1f1f1;
    }
    .slider-arrows-area {
        position: absolute;
        top: 50%;
        width: 100%;
        transform: translateY(-50%);
        z-index: 4;
        display: flex;
        justify-content: space-between;
        padding: 0 30px;
    }
    .slider-arrow {
        background: rgba(255,255,255,0.2);
        border: none;
        color: #fff;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        font-size: 20px;
        cursor: pointer;
        transition: 0.3s;
    }
    .slider-arrow:hover {
        background: #004494; /* Tema ana rengi */
        color: #fff;
    }
</style>