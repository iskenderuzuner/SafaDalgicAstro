---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Tüm blog yazılarının adreslerini (linklerini) oluştur
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. Tıklanan yazının verisini al
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
  
  <section class="blog-detail-section">
    <div class="container">
      
      <a href="/#blog" class="back-link"><i class="fas fa-arrow-left"></i> Blog Listesine Dön</a>

      <article class="blog-post-content">
        
        <header class="post-header">
          <span class="post-date"><i class="far fa-calendar-alt"></i> {new Date(entry.data.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          <h1>{entry.data.title}</h1>
        </header>

        <div class="post-image">
            <img src={entry.data.image} alt={entry.data.title} />
        </div>

        <div class="post-body">
          <Content />
        </div>

      </article>

    </div>
  </section>

</Layout>

<style>
  /* Blog Detay Sayfası Tasarımı */
  .blog-detail-section {
    padding: 60px 0;
    background-color: #f9f9f9;
    min-height: 80vh;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 20px;
    color: #004494;
    font-weight: 600;
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .blog-post-content {
    background: white;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }

  .post-header {
    margin-bottom: 30px;
    text-align: center;
  }

  .post-date {
    display: block;
    color: #888;
    margin-bottom: 10px;
    font-size: 0.9em;
  }

  .post-header h1 {
    font-size: 2.2rem;
    color: #333;
    line-height: 1.3;
  }

  .post-image {
    width: 100%;
    height: 400px;
    margin-bottom: 40px;
    border-radius: 8px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Admin panelinden gelen metinlerin tasarımı (post-body) */
  .post-body {
    line-height: 1.8;
    color: #444;
    font-size: 1.1rem;
  }

  .post-body :global(h2) {
    font-size: 1.8rem;
    color: #004494;
    margin-top: 30px;
    margin-bottom: 15px;
  }

  .post-body :global(h3) {
    font-size: 1.5rem;
    color: #333;
    margin-top: 25px;
    margin-bottom: 10px;
  }

  .post-body :global(p) {
    margin-bottom: 20px;
  }

  .post-body :global(ul), .post-body :global(ol) {
    margin-bottom: 20px;
    padding-left: 20px;
  }

  .post-body :global(li) {
    margin-bottom: 10px;
  }
  
  .post-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    margin: 20px 0;
  }

  /* Mobil Uyum */
  @media (max-width: 768px) {
    .blog-post-content {
      padding: 20px;
    }
    .post-header h1 {
      font-size: 1.8rem;
    }
    .post-image {
      height: 250px;
    }
  }
</style>