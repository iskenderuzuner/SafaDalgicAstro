---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Dinamik rotaları oluştur
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. Mevcut yazıyı ve diğer yazıları al
const { entry } = Astro.props;
const { Content } = await entry.render();

// Sidebar için diğer blogları çek (Şu anki yazı hariç)
const tumBloglar = await getCollection('blog');
const digerYazilar = tumBloglar
  .filter(blog => blog.slug !== entry.slug) // Kendisini listeden çıkar
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf())
  .slice(0, 5); // Son 5 yazıyı göster
---

<Layout title={entry.data.title} description={entry.data.description}>
  
  <div class="blog-wrapper">
    <div class="container">
      <div class="blog-layout">
        
        <main class="blog-main">
          <header class="post-header">
            <h1>{entry.data.title}</h1>
            <span class="post-meta">
               <i class="far fa-calendar-alt"></i> {new Date(entry.data.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}
            </span>
          </header>

          <div class="post-featured-image">
             <img src={entry.data.image} alt={entry.data.title} />
          </div>

          <article class="post-content">
            <Content />
          </article>
        </main>

        <aside class="blog-sidebar">
          <div class="sidebar-widget">
            <h3>BLOG</h3>
            <ul class="sidebar-list">
              {digerYazilar.map((yazi) => (
                <li>
                  <a href={`/blog/${yazi.slug}`} class="sidebar-link">
                    <i class="fas fa-chevron-right"></i> {yazi.data.title}
                  </a>
                </li>
              ))}
              {digerYazilar.length === 0 && <li>Başka yazı bulunmuyor.</li>}
            </ul>
          </div>

          <div class="sidebar-widget contact-widget">
            <h3>Hemen Teklif Al</h3>
            <p>Sondaj projeleriniz için uzman ekibimizle iletişime geçin.</p>
            <a href="/iletisim" class="btn-sidebar">İletişime Geç</a>
          </div>
        </aside>

      </div>
    </div>
  </div>

</Layout>

<style>
  .blog-wrapper { padding: 60px 0; background: #fff; }
  
  /* Layout: Sol (Main) ve Sağ (Sidebar) */
  .blog-layout {
    display: grid;
    grid-template-columns: 2fr 1fr; /* Sol taraf 2 birim, Sağ taraf 1 birim */
    gap: 40px;
  }

  /* --- SOL TARA (MAIN) --- */
  .post-header h1 {
    font-size: 2rem; /* Başlık küçültüldü */
    color: #004494;
    margin-bottom: 10px;
    text-align: left; /* Sola dayalı */
  }

  .post-meta {
    display: block;
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 20px;
    text-align: left;
  }

  .post-featured-image { margin-bottom: 30px; }
  .post-featured-image img {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }

  /* Yazı İçeriği (Puntolar Küçültüldü) */
  .post-content {
    font-size: 1rem; /* Okuma puntosu */
    line-height: 1.7;
    color: #444;
    text-align: left; /* Sola dayalı */
  }
  
  /* Markdown içindeki başlıklar */
  .post-content :global(h2) { font-size: 1.5rem; color: #333; margin-top: 30px; margin-bottom: 15px; }
  .post-content :global(h3) { font-size: 1.3rem; margin-top: 25px; margin-bottom: 10px; }
  .post-content :global(p) { margin-bottom: 20px; }
  .post-content :global(ul) { padding-left: 20px; margin-bottom: 20px; }
  .post-content :global(img) { max-width: 100%; height: auto; border-radius: 5px; margin: 20px 0; }

  /* --- SAĞ TARAF (SIDEBAR) --- */
  .blog-sidebar { border-left: 1px solid #eee; padding-left: 30px; }

  .sidebar-widget { margin-bottom: 40px; }
  .sidebar-widget h3 {
    font-size: 1.4rem;
    color: #004494; /* Referanstaki lacivert başlık */
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .sidebar-list { list-style: none; padding: 0; }
  .sidebar-list li {
    border-bottom: 1px solid #f4f4f4;
    padding: 12px 0;
  }
  .sidebar-list li:last-child { border-bottom: none; }

  .sidebar-link {
    text-decoration: none;
    color: #d35400; /* Referanstaki turuncu renk tonu */
    font-size: 0.95rem;
    transition: padding-left 0.3s;
    display: block;
  }
  
  .sidebar-link i { font-size: 0.8rem; margin-right: 8px; color: #ccc; }

  .sidebar-link:hover {
    padding-left: 5px;
    color: #e67e22;
  }

  /* İletişim Widget'ı */
  .contact-widget { background: #f9f9f9; padding: 20px; border-radius: 5px; text-align: center; }
  .contact-widget h3 { color: #333; font-size: 1.2rem; }
  .btn-sidebar {
    display: inline-block;
    background: #004494;
    color: #fff;
    padding: 10px 20px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    margin-top: 10px;
  }

  /* Mobil Uyumluluk */
  @media (max-width: 768px) {
    .blog-layout { grid-template-columns: 1fr; } /* Mobilde tek sütun */
    .blog-sidebar { border-left: none; padding-left: 0; border-top: 1px solid #eee; padding-top: 40px; }
  }
</style>